{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",                   // or "NodeNext"
    "moduleResolution": "NodeNext",       // Node ESM module resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "src",
    "allowJs": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]  // âœ… only exclude node_modules
}